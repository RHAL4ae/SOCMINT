# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/socmint

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Redis Configuration (for Celery)
REDIS_URL=redis://redis:6379/0

# Social Media API Keys

# Twitter
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_CALLBACK_URL=http://localhost:8000/api/v1/connect/twitter/callback

# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:8000/api/v1/connect/facebook/callback

# LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=http://localhost:8000/api/v1/connect/linkedin/callback

# Encryption Key for API Tokens
ENCRYPTION_KEY=your_encryption_key

# Optional Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

